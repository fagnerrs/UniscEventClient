<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView android:text="Foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:id="@+id/activity_pessoa_Image"
                android:scaleType="fitCenter" />

            <Button android:text="Tirar Foto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:onClick="TirarFotoClick"/>

            <TextView android:text="MatrÃ­cula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/activity_pessoa_EdtMatricula"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView android:text="Nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/activity_pessoa_EdtNome"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content" />

            <TextView android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/activity_pessoa_EdtEmail"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content" />



            <TextView android:text="Nome de acesso"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/activity_pessoa_EdtNomeAcesso"
                android:layout_width="match_parent"
                android:inputType="text"
                android:layout_height="wrap_content" />

            <TextView android:text="Senha de acesso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/activity_pessoa_EdtSenhaAcesso"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />


            <Button android:text="Salvar"
                android:id="@+id/activity_pessoa_BtnSalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="SalvarPessoaClick"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
